        </Button>


        <TextBlock x:Name="artist" Text="TextBlock" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,110,0,0"/>

        <Canvas Background="Black" Opacity="0.1" Panel.ZIndex="-100"/>

