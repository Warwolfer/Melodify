<Window x:Class="Melodify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Melodify"
        xmlns:interop="clr-namespace:Melodify"
        Background="Transparent"
        AllowsTransparency="True"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="200"
        Width="400"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid >


        <TextBlock HorizontalAlignment="Center" Text="HeliOS" TextWrapping="Wrap" VerticalAlignment="Center" Margin="0,0,0,75" FontSize="48" FontFamily="Calibri Light" Foreground="White"/>

        <Label Name="Title" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0" FontSize="20"  Foreground="White">musicorum</Label>
        <Label Name="Author" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,100,0,0" FontSize="16" Foreground="White">artifex</Label>

        <Image x:Name="cover" Source="https://source.unsplash.com/random/200x400" HorizontalAlignment="Center" Height="500" VerticalAlignment="Top" Width="500" Stretch="UniformToFill" Panel.ZIndex="-99" Margin="0,-140,0,0">
            <Image.Effect>
                <BlurEffect Radius="40"/>
            </Image.Effect>
        </Image>
        <Canvas Background="Black" Opacity="0.5" Panel.ZIndex="-98"/>

