        xmlns:interop="clr-namespace:Melodify"
        interop:WindowBlur.IsEnabled="True"
        Background="Transparent"
        AllowsTransparency="True"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="200"
        Width="400"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
